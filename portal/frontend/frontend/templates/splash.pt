<!DOCTYPE html>
<html tal:define="role request.GET.get('role', 'student')" tal:define="static_url request.static_url('frontend:static/')">
<head>
  <link rel="stylesheet" href="${static_url}font-awesome/css/font-awesome.min.css">
  <title>${title}</title>
  <link rel="stylesheet" type="text/css" href="${static_url}css/splash.css" />
  <link rel="stylesheet" type="text/css" href="${static_url}css/top.css" />
  <link rel="stylesheet" type="text/css" href="http://code.jboxcdn.com/0.3.2/jBox.css" />
</head>
<body>
<div id="wrapper">
    <div id="contentwrap">
      <img src="${static_url}header.png" width="1100px" />

      <div class="tabs_holder">
       <ul>
        <li tal:attributes="class 'tab_selected' if role=='student' else ''"><a href="#students">Students</a></li>
        <li tal:attributes="class 'tab_selected' if role=='teacher' else ''"><a href="#teachers">Teachers</a></li>
        <li tal:attributes="class 'tab_selected' if role=='parent' else ''"><a href="#parents">Parents</a></li>
        <li tal:attributes="class 'tab_selected' if role=='admin' else ''"><a href="#staff">Staff</a></li>
       </ul>
       <div tal:define="global counter 0" class="content_holder">
        <div id="students" style="padding:0px;margin:0px;">

          <div id="content">
           <p>
            <tal:block tal:repeat="item student_buttons" tal:condition="student_buttons">
            <div id="button_${counter}" class="button">
              <a tal:define="global counter counter+1" href="${item.url}">
                  <div><i class="fa fa-${item.icon} fa-5x"></i></div>
                  <br />${item.name} ${counter}
              </a>
            </div>
            </tal:block>

            <div id="mb_db" class="button">
                  <div><i class="fa fa-university fa-5x"></i></div>
                  <br />Britannica
            </div>

           </p> 
         </div>  

        </div> 

        <div id="teachers" style="padding:0px;margin:0px;">
          <div id="content">
           <p>
            <tal:block tal:repeat="item teacher_buttons">
            <div id="button_${counter}" class="button">
              <a tal:define="global counter counter+1" href="${item.url}">
                  <div><i class="fa fa-${item.icon} fa-5x"></i></div>
                  <br />${item.name} ${counter}
              </a>
            </div>
            </tal:block>
          </p>
         </div>
        </div>

        <div id="parents" style="padding:0px;margin:0px;">
         <div id="content">
         <p>
          <div class="button">
            <a href="#">
              <div><i class="fa fa-question-circle fa-5x"></i></div>
              <br />To Do
            </a>
          </div>
         </p>
        </div>
        </div>

        <div id="staff" style="padding:0px;margin:0px;">
        <div id="content">
         <p>
          <div class="button">
            <a href="#">
              <div><i class="fa fa-question-circle fa-5x"></i></div>
              <br />To Do
            </a>
          </div>
         </p>
        </div>
        </div>
        The count is: ${counter}
       </div><!-- /.content_holder -->
      </div><!-- /.tabs_holder -->
    </div>


</div>

<script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
<script type="text/javascript" src="https://code.jquery.com/ui/1.11.2/jquery-ui.min.js"></script>
<script type="text/javascript" src="${static_url}js/skinable_tabs.js"></script>
<script type="text/javascript">
  $('.tabs_holder').skinableTabs({
    skin: 'skin5',
    position: 'top',
    persist_tab: '1'
  });
</script>

<script src="http://code.jquery.com/jquery-1.11.1.min.js"></script>
<script src="http://code.jboxcdn.com/0.3.2/jBox.min.js"></script>
<script type="text/javascript">

$('#mb_db').jBox('Tooltip', {
    position: {
        x: 'left',
        y: 'top'
    },
    outside: 'x',
    title: "Areas within Britannica:",
    closeOnMouseleave:true,
    content: '<p><a href="http://school.eb.com.au/levels/primary">Primary</a></p><p><a href="http://school.eb.com.au/levels/middle">Middle</a></p><p><a href="http://school.eb.com.au/levels/high">High</a></p>'
});

new jBox('Notice', {
    content: 'It provides a drop-down menu for further navigation',
});

new jBox('Notice', {
    content: 'Check out the "Britannica" link in the Students section.',

});

</script>


</body>
</html>
